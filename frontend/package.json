  "scripts": {
    "gen-version": "echo \"export const OCELOTVERSION = '$(git rev-parse --short HEAD)';\" > src/version.ts",
    "build": "yarn gen-version && webpack --progress",
    "start": "yarn gen-version && webpack-dev-server --open",
    "serve-local": "http-server build",
    "deploy": "rsync -azdOL build/ ocelot@ocelot-ide.org:/var/www/ocelot-ide.org/",
    "deploy-beta": "rsync -azdOL build/ beta/ && cd beta && git add -A . && git commit -m commit && git push",
